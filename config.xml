<?xml version='1.0' encoding='utf-8'?>
<widget id="io.devgarbage.offlinebible" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Offline Bible</name>
    <description>
        Free offline bible.This app code available in github under MIT license.
    </description>
    <author email="ravinsinghd@outlook.com" href="http://cordova.io">
        Ravin Singh D
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~5.2.1" />
    <engine name="browser" spec="~4.1.0" />
</widget>
